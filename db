use taskdb;

create table user (user_id int not null auto_increment, username varchar(30), password varchar(50), language varchar(15), filecount int, primary key (`user_id`));

create table files (file_id int not null auto_increment, filename varchar(100), filesize int not null, user_id int not null, primary key (`file_id`));

select * from user;

select * from files;
